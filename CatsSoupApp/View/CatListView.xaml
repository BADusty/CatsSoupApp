<UserControl x:Class="CatsSoupApp.View.CatListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CatsSoupApp.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#FFC5EA">
        <Grid.Resources>
            <Style TargetType="Button">
                <Style.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="3"/>
                    </Style>
                </Style.Resources>
            </Style>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,0" Background="#E76FA9">
            <TextBlock Text="CATS N SOUP MINI HELPER" FontWeight="Bold" FontSize="16"
                VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="1"/>

            <Button Content="Load Cat List from File" Width="150" Command="{Binding LoadCommand}"  Background="#FFC5EA"
                Margin="0,5,10,5" HorizontalAlignment="Right" Grid.Column="2"/>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="Cat Name:" Margin="5,10,5,2"/>
                <TextBox Text="{Binding WrittenCatName, UpdateSourceTrigger=PropertyChanged}" Margin="5" Height="25" VerticalContentAlignment="Center"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Grade:" Margin="5,10,3,2" Grid.Column="0"/>
                    <ComboBox Margin="5" Grid.Column="1" Width="50" HorizontalAlignment="Left"
                              ItemsSource="{Binding Grades}"
                              SelectedItem="{Binding SelectedGrade}"/>
                </Grid>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Hearts:" Margin="5,10,1,2" Grid.Column="0"/>
                    <ComboBox Margin="5" Grid.Column="1" Width="50" HorizontalAlignment="Left"
                              ItemsSource="{Binding Hearts}"
                              SelectedItem="{Binding SelectedHearts}"/>
                </Grid>

                <TextBlock Text="Skill:" Margin="5,0,5,2"/>
                <ComboBox Margin="5" IsEditable="True"
                      ItemsSource="{Binding FacilityCollection}"
                      SelectedItem="{Binding SelectedFacility, Mode=TwoWay}"/>

                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <Button Content="Clear Boxes" Margin="5,0" Background="White" Grid.Column="0" Command="{Binding ClearForm}"/>
                    <Button Content="Cancel Edit" Margin="5,0" Background="#f25e65" Grid.Column="1" Command="{Binding CancelEdit}"/>
                </Grid>

                <Button Content="Save Cat" Background="#FF91FF" Margin="5" Height="30" Command="{Binding SaveCat}"/>
                <Button Content="Delete Cat" Background="#f25e65" Margin="5,0" Height="30" Command="{Binding DeleteCat}"/>
                <Button Content="Save Cat List" Background="#FF91FF" Margin="5" Height="30" Command="{Binding SaveCommand}"/>

                <Button Content="GO TO ASSIGN SCREEN"
                    Background="#E76FA9"
                    FontWeight="Bold"
                    Foreground="White"
                    Margin="5,0" Height="60"
                    Command="{Binding SwitchToAssignView}"/>
            </StackPanel>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Cat list: (Click cat to edit)" FontWeight="Bold" Padding="5" Grid.Row="0"/>
                <ListBox Margin="0,0,5,0" Name="CatListBox" Grid.Row="1"
                         ItemsSource="{Binding Cats}"
                         SelectedItem="{Binding SelectedCat, Mode=TwoWay}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock>
                                <Run Text="{Binding CatName}" FontWeight="Bold"/>
                                <Run Text="-" />
                                <Run Text="{Binding CatSkill}"/>
                                <Run Text="{Binding CatGrade}"/>
                                <Run Text="&#xE735;" FontFamily="Segoe MDL2 Assets"/>
                                <Run Text="{Binding CatHearts}"/>
                                <Run Text="&#xEB52;" FontFamily="Segoe MDL2 Assets"/>
                            </TextBlock>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
