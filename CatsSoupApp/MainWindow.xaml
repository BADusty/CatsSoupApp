<Window x:Class="CatsSoupApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CatsSoupApp"
        xmlns:vm="clr-namespace:CatsSoupApp.ViewModel"
        mc:Ignorable="d"
        Title="Cats n Soup Mini Helper" Height="450" Width="800" ResizeMode="CanMinimize">
    <Window.Resources>
        <vm:MainVM x:Key="MainVM" />
    </Window.Resources>

    <Window.DataContext>
        <vm:MainVM/>
    </Window.DataContext>
    
    <Grid>
        <Grid.Resources>
            <Style TargetType="Button">
                <Style.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Style.Resources>
            </Style>
        </Grid.Resources>

        <Grid Grid.Row="1" Background="#FFC5EA">
            <ContentControl Content="{Binding CurrentView}" />
        </Grid>
    </Grid>
</Window>
